#include <iostream>
using namespace std;
//задача  74 //

int main() {
    setlocale(LC_ALL, "Russian");
    int n;
    cout << "Введите возраст : ";
    cin >> n;

    if (n % 10 == 1 && n % 100 != 11) {
        cout << n << " год" << endl;
    }
    else if ((n % 10 >= 2 && n % 10 <= 4) && (n % 100 < 12 || n % 100 > 14)) {
        cout << n << " года" << endl;
    }
    else {
        cout << n << " лет" << endl;
    }

    return 0;
}
